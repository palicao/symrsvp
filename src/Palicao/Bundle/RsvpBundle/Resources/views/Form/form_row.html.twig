{% block form_row %}
    <div class="control-group {% if errors|length > 0 %}error{% endif %}">
        {{ form_label(form, label) }}
        <div class="controls">
            {% set class = '' %}
            {% if errors|length > 0 %}
                {% set class = 'error' %}
            {% endif %}
            {{ form_widget(form, { 'attr': { 'class': class } }) }}
            {{ form_errors(form) }}
        </div>
    </div>
{% endblock form_row %}